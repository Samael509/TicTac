<Window x:Class="TicTac.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Крестики-нолики" Height="500" Width="550" ResizeMode="NoResize" Background="#FFECECEC">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,10,10,0" VerticalAlignment="Top" >
            <TextBlock Text="Выберите уровень сложности:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
            <ComboBox Name="DifficultyComboBox" Width="150" Height="30" SelectionChanged="DifficultyComboBox_SelectionChanged" FontSize="14">
                <ComboBoxItem Content="Легко" Tag="Easy" IsSelected="True"/>
                <ComboBoxItem Content="Средне" Tag="Medium"/>
                <ComboBoxItem Content="Сложно" Tag="Hard"/>
            </ComboBox>
            <Button Content="Рестарт" Width="100" Height="30" Margin="20,0,0,0" Click="RestartButton_Click" FontSize="14"/>
        </StackPanel>
        <UniformGrid Rows="3" Columns="3" Margin="20,70,20,70" Name="GameGrid">
            <Button Name="Button0" FontSize="36" FontWeight="Bold" Margin="5" Click="Button_Click"/>
            <Button Name="Button1" FontSize="36" FontWeight="Bold" Margin="5" Click="Button_Click"/>
            <Button Name="Button2" FontSize="36" FontWeight="Bold" Margin="5" Click="Button_Click"/>
            <Button Name="Button3" FontSize="36" FontWeight="Bold" Margin="5" Click="Button_Click"/>
            <Button Name="Button4" FontSize="36" FontWeight="Bold" Margin="5" Click="Button_Click"/>
            <Button Name="Button5" FontSize="36" FontWeight="Bold" Margin="5" Click="Button_Click"/>
            <Button Name="Button6" FontSize="36" FontWeight="Bold" Margin="5" Click="Button_Click"/>
            <Button Name="Button7" FontSize="36" FontWeight="Bold" Margin="5" Click="Button_Click"/>
            <Button Name="Button8" FontSize="36" FontWeight="Bold" Margin="5" Click="Button_Click"/>
        </UniformGrid>
        <TextBlock Name="StatusText" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Window>